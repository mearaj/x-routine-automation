{
  "manifest_version": 3,
  "name": "X-Routine-Automation",
  "version": "1.0.8",
  "description": "Automates liking, retweeting, and quoting pinned posts from followings on X (Twitter).",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "controller.html",
        "controller.js"
      ],
      "matches": [
        "https://x.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "webNavigation",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://x.com/*"
  ]
}
